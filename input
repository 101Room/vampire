#------------------------------------------
# System Dimensions:
#------------------------------------------
dimensions:system-size-x = 8 !nm
dimensions:system-size-y = 8 !nm
dimensions:system-size-z = 7.8 !nm

#------------------------------------------
# Material Files:
#------------------------------------------
material:file=IrMn.mat
material:unit-cell-file= "Vinput.txt"

sim:enable-surface-anisotropy
sim:surface-anisotropy-threshold=20

sim:save-checkpoint=continuous

#------------------------------------------
# Simulation attributes:
#------------------------------------------

sim:program=setting
sim:applied-field-strength = 10
sim:applied-field-unit-vector= 1,0,0


#------------------------------------------
# data output
#------------------------------------------
output:real-time
output:applied-field-strength
output:temperature
output:material-magnetisation

config:atoms
config:atoms-output-rate = 10
